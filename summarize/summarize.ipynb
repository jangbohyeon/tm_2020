    "# '제목'열에서 na가 있으면 해당 행 삭제\n",
    "cnews_20200801 = cnews_20200801.dropna(subset=['내용'])\n",
    "# row번호 리셋하기\n",
    "cnews_20200801 = cnews_20200801.reset_index()"
   ]
